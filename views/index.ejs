<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" href="bulma.min.css">
		<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
	</head>
	<body>
		<section class="section">
			<div class="maincolumns columns is-desktop is-vcentered">
				<div class="column is-10 is-offset-1 notification is-info is-light box container">
					<div class="title">
						Recipes
					</div>
					<% if (locals.allRecipes) { %>
						<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
							<tr>
								<th> Recipe Name </th>
								<th> Recipe Description </th>
								<th> Cook Time </th>
								<th> Delete </th>
								<th> Review </th>
								<th> &nbsp; </th>
							</tr>
							</thead>
							<% let i=0; %>
							<% for(i=0; i < allRecipes.length; i++) { %>
							<tr>
								<td><%= allRecipes[i].name %></td>
								<td><%= allRecipes[i].description %></td>
								<td><%= allRecipes[i].cook_time %></td>
								<td><a href="/deleteRecipe?id=<%= allRecipes[i].recipe_id %>">
									<span class="icon is-small">
										<i class="fas fa-trash"></i>
									</span></a>
								</td>
								<td><a href="/showIngredients?id=<%= allRecipes[i].recipe_id %>">
									<span class="icon is-small">
										<i class="fas fa-star"></i>
									</span></a>
								</td>
							</tr>
							<% } %>
							<tfoot>
								<tr> <td colspan="4">
								There are <%= i %> recipes.
								</td> </tr>
							</tfoot>
						</table>
						<form action="addRecipe" method="post">
							<div class="field is-horizontal">
							 <div class="field-label is-normal">
							<label class="label">Add New Recipe</label>
							 </div>
							 <div class="field-body">
							<div class="field">
							 <p class="control is-expanded">
							<input name="recipe_name" class="input" type="text" 
							 placeholder="Recipe Name">
							 </p>
							</div>
							<div class="field">
							 <p class="control is-expanded">
							<input name="description" class="input" type="text" 
							 placeholder="Description">
							 </p>
							</div>
							<div class="field">
							<p class="control is-expanded">
							<input name="cook_time" class="input" type="text" 
							placeholder="Cook Time">
							</p>
							</div>
							<div class="field">
							<button class="button is-link">
							<span>Add</span>
							<span class="icon is-small">
							<i class="fas fa-user-plus"></i>
							</span>
							</button>
							</div>
							 </div>
							</div>
							</form>
						</div>
					<% } %>
				</div>
			</div>
		</section>
	</body>
</html>
